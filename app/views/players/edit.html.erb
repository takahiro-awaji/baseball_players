<h2>選手編集</h2>
<%= form_with(model: @player, url: team_player_path(@player.team_id), local: true) do |f| %>

  <div class="field"> 
    <%= f.label "選手名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "性別" %><br />
    <%= f.radio_button(:sex, '男') %> 男
    <%= f.radio_button(:sex, '女') %> 女
  </div>

  <div class="field">
    <%= f.label "生年月日" %><br />
    <%= f.date_field :birthday %>
  </div>

  <div class="field">
    <%= f.label "メインポジション" %><br />
    <%= f.collection_select(:main_position_id, MainPosition.all, :id, :name, {}) %>
  </div>

  <div class="field">
    <%= f.label "背番号" %><br />
    <%= f.text_field :league %>
  </div>

  <div class="field">
    <%= f.label "投打" %><br />
      <div>
      <%= f.label "投" %>
       <%= f.radio_button(:at_pitch, "右")%> 右
       <%= f.radio_button(:at_pitch, "左")%> 左
       <%= f.radio_button(:at_pitch, "両")%> 両
      </div>
      <div>
      <%= f.label "打" %>
       <%= f.radio_button(:at_bat, "右")%> 右
       <%= f.radio_button(:at_bat, "左")%> 左
       <%= f.radio_button(:at_bat, "両")%> 両
      </div>
  </div>

  <div class="field">
    <%= f.label "サブポジション" %><br />
    <% ["投手", "捕手", "内野手", "外野手"].each do |sub| %>
      <%= f.check_box :sub_position, {multiple: true}, sub, nil %>
      <%= sub %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "選手の役職" %><br />
    <%= f.text_area :player_post %>
  </div>

  <div class="field">
    <%= f.label "スタッフの役職" %><br />
    <%= f.text_area :staff_post %>
  </div>

  <div class="field">
    <%= f.label "野球歴" %><br />
    <%= f.text_area :carrer %>
  </div>

  <div class="field">
    <%= f.label "自己紹介" %><br />
    <%= f.text_area :promotion %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
<%= link_to "チームへ戻る", team_path(@team)%>
<%= link_to "トップページへ戻る", root_path %>