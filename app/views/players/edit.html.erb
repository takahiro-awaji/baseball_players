<%= render 'shared/header' %>

<div class="container mt-3">
  <h2>選手編集</h2>

  <%= form_with(model: @player, url: team_player_path(@player.team_id), local: true) do |f| %>

    <div class="form-group row"> 
      <%= f.label "選手名", class: "col-sm-2" %><br />
      <%= f.text_field :name, class: "form-control col-sm-6" %>
    </div>

    <div class="form-group row">
      <%= f.label "性別", class: "col-sm-2" %><br />
      <label class="form-check pr-2">
        <%= f.radio_button(:sex, '男') %> 男
      </label>
      <label class="form-check pr-2">
        <%= f.radio_button(:sex, '女') %> 女
      </label>
    </div>

    <div class="form-group row">
      <%= f.label "生年月日", class: "col-sm-2" %><br />
      <%= f.date_field :birthday, class: "form-control col-sm-2" %>
    </div>

    <div class="form-group row">
      <%= f.label "メインポジション", class: "col-sm-2" %><br />
      <%= f.collection_select(:main_position_id, MainPosition.all, :id, :name, {}) %>
    </div>

    <div class="form-group row">
      <%= f.label "背番号", class: "col-sm-2" %><br />
      <%= f.text_field :league, class: "form-control col-sm-4" %>
    </div>

    <div class="form-group row">
      <%= f.label "投打", class: "col-sm-2" %><br />
        <div class="form-check mr-4">
          <%= f.label "投", class: "mr-4" %>
          <label class="pr-2"><%= f.radio_button(:at_pitch, "右")%> 右</label>
          <label class="pr-2"><%= f.radio_button(:at_pitch, "左")%> 左</label>
          <label class="pr-2"><%= f.radio_button(:at_pitch, "両")%> 両</label>
          </div>
        <div class="form-check">
          <%= f.label "打", class: "mr-4" %>
          <label class="pr-2"><%= f.radio_button(:at_bat, "右")%> 右</label>
          <label class="pr-2"><%= f.radio_button(:at_bat, "左")%> 左</label>
          <label class="pr-2"><%= f.radio_button(:at_bat, "両")%> 両</label>
        </div>
    </div>

    <div class="form-group row">
      <%= f.label "サブポジション", class: "col-sm-2" %><br />
      <% ["投手", "捕手", "内野手", "外野手"].each do |sub| %>
        <label class="form-check pr-2">
          <%= f.check_box :sub_position, {multiple: true}, sub, nil %>
          <%= sub %>
        </label>
      <% end %>
    </div>

    <div class="form-group row">
      <%= f.label "選手の役職", class: "col-sm-2" %><br />
      <%= f.text_area :player_post, class: "form-control col-sm-6", rows: 3 %>
    </div>

    <div class="form-group row">
      <%= f.label "スタッフの役職", class: "col-sm-2" %><br />
      <%= f.text_area :staff_post, class: "form-control col-sm-6", rows: 3 %>
    </div>

    <div class="form-group row">
      <%= f.label "野球歴", class: "col-sm-2" %><br />
      <%= f.text_area :carrer, class: "form-control col-sm-6", rows: 4 %>
    </div>

    <div class="form-group row">
      <%= f.label "自己紹介", class: "col-sm-2" %><br />
      <%= f.text_area :promotion, class: "form-control col-sm-6", rows: 4 %>
    </div>

    <div class="custom-file row mb-3">
      <%= f.label "選手画像", class: "col-sm-2" %>
      <%= f.file_field :image, id: "customFile" %>
    </div>
    
    <div class="actions">
      <%= f.submit "登録する", class: "col-8 btn btn-primary" %>
    </div>
  <% end %>

  <div class="row d-flex justify-content-around">
    <%= link_to "チームページへ戻る", team_path(@team), class: "btn btn-outline-secondary col-sm-3 m-2" %>
    <%= link_to "トップページへ戻る", root_path, class: "btn btn-outline-info col-sm-3 m-2" %>
  </div>
  
<%= render 'shared/footer' %>