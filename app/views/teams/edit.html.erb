<%= render 'shared/header' %>

<%= form_with(model: @team, local: true) do |f| %>
  <%# <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field"> 
    <%= f.label "チーム名" %><br />
    <%= f.text_field :team_name %>
  </div>

  <div class="field">
    <%= f.label "チーム名（カナ）" %><br />
    <%= f.text_field :team_name_kana %>
  </div>

  <div class="field">
    <%= f.label "活動拠点" %><br />
    <%= f.collection_select(:activity_base_id, ActivityBase.all, :id, :name, {}) %>
  </div>

  <div class="field">
    <%= f.label "チーム区分" %><br />
    <%= f.collection_select(:team_attribute_id, TeamAttribute.all, :id, :name, {}) %>
  </div>

  <div class="field">
    <%= f.label "チームレベル" %><br />
    <%= f.collection_select(:team_level_id, TeamLevel.all, :id, :name, {}) %>
  </div>

  <div class="field">
    <%= f.label "チーム平均年齢" %><br />
    <%= f.collection_select(:team_player_age_id, TeamPlayerAge.all, :id, :name, {}) %>
  </div>

  <div class="field">
    <%= f.label "メンバー野球歴" %><br />
    <%= f.collection_select(:team_player_history_id, TeamPlayerHistory.all, :id, :name, {}) %>
  </div>

  <div class="field">
    <%= f.label "所属リーグ・団体・連盟等" %><br />
    <%= f.text_area :league %>
  </div>

  <div class="field">
    <%= f.label "獲得タイトル" %><br />
    <%= f.text_area :team_title %>
  </div>

  <div class="field">
    <%= f.label "チーム結成" %><br />
    <%= f.collection_select(:since_id, Since.all, :id, :name, {}) %>
  </div>

  <div class="field">
    <%= f.label "活動曜日" %><br />
    <% [ "土", "日", "月", "火", "水", "木", "金"].each do |day| %>
      <%= f.check_box :activity_day, {multiple: true}, day, nil %>
      <%= day %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "活動ペース" %><br />
    <%= f.collection_select(:activity_pace_id, ActivityPace.all, :id, :name, {}) %>
  </div>

    <div class="field">
    <%= f.label "年間試合数" %><br />
    <%= f.collection_select(:games_per_year_id, GamesPerYear.all, :id, :name, {}) %>
  </div>

  <div class="field">
    <%= f.label "チームスローガン" %><br />
    <%= f.text_field :team_slogan %>
  </div>

  <div class="field">
    <%= f.label "チーム紹介" %><br />
    <%= f.text_area :introduction %>
  </div>



  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

