<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: sandybrown;">
    <% if team_signed_in? %>
      <%= link_to image_tag('logo.jpg', class: "logo rounded"), team_path(current_team.team_url) %>
    <% else %>
      <%= link_to image_tag('logo.jpg', class: "logo rounded"), root_path %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <div class="nav-item btn">
        <%= link_to "チーム一覧", teams_path, class: "btn" %>
      </div>

      <% if team_signed_in? %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown active">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_team.team_name %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "マイページ", team_path(current_team.team_url), class: "btn dropdown-item"%>
            <%= link_to "新規選手登録", new_team_player_path(current_team.team_url), class: "btn dropdown-item" %>
            <%= link_to "新規試合結果登録", new_team_game_path(current_team.team_url), class: "btn dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "ログアウト", destroy_team_session_path, method: :delete, class: "btn dropdown-item" %>
          </div>
        </li>
      </ul>
      <% else %>
         <ul class="navbar-nav mr-auto">
          <li class="btn nav-item"><%= link_to "新規チーム登録", new_team_registration_path, class: "new-team btn btn-primary" %></li>
          <li class="btn nav-item"><%= link_to "ログイン", team_session_path, class: "login btn btn-secondary" %></li>
        </ul>
      <% end %>

      <%# <form class="form-inline my-2 my-lg-0 mr-3">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form> %>

      <%= form_with(url: search_teams_path, local: true, method: :get, class: "form-inline my-2 my-lg-0 mr-3") do |form| %>
        <%= form.text_field :keyword, class: "form-control mr-sm-3 ", placeholder: "チーム名を入力してください", style: "width: 300px" %>
        <%= form.submit "検索", class: "btn btn-outline-success my-2 my-sm-0"%>
      <% end %>
    </div>
  </nav>
</header>

