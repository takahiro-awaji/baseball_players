<%= render 'shared/header' %>

<div class="container">

<h2>試合一覧</h2>

  <div class="col">
    <div class="row">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">試合日</th>
            <th scope="col">試合区分</th>
            <th scope="col">対戦相手</th>
            <th scope="col">結果</th>
            <th scope="col">スコア</th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
            <tr>
              <td><%= link_to game.gameday, "/teams/#{@team.id}/games/#{game.id}", class: "stretched-link" %></td>
              <td><%= game.game_attribute %></td>
              <td><%= game.opponent %></td>
              <td><%= game.game_result %></td>
              <td><%= game.game_myteam_score %> - <%= game.game_opponent_score %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <%= link_to "チームページへ戻る", team_path(@team) %>
  <%= link_to "トップページへ戻る", root_path %>

</div>

<%= render 'shared/footer' %>



