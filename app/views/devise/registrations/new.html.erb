<%= render 'shared/header' %>

<div class="container mt-3">
  <h2>チーム新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label "メールアドレス" %>
        <span class="ml-2 badge badge-danger">必須</span>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-7" %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label "パスワード" %>
        <span class="ml-2 badge badge-danger">必須</span>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-sm-5", placeholder: "6文字以上で入力してください" %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label "パスワード確認用" %>
        <span class="ml-2 badge badge-danger">必須</span>
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-5" %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label "チーム名" %>
        <span class="ml-2 badge badge-danger">必須</span>
      </div>
      <%= f.text_field :team_name, class: "form-control col-sm-6" %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label "チーム名（カナ）" %>
        <span class="ml-2 badge badge-danger">必須</span>
      </div>
        <%= f.text_field :team_name_kana, class: "form-control col-sm-6" %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label "チームURL", class: "text-uppercase" %>
        <span class="ml-2 badge badge-danger">必須</span>
      </div>
      <div class="input-group-prepend">
        <div class="input-group-text">
        baseball-players.site/teams/
        </div>
        <%= f.text_field :team_url, class: "form-control col-sm-7", placeholder: "※変更不可" %>
      </div>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label "活動拠点" %>
        <span class="ml-2 badge badge-danger">必須</span>
      </div>
      <%= f.collection_select(:activity_base_id, ActivityBase.all, :id, :name, {}, class: "col-sm-4 custom-select") %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label "チーム区分" %>
        <span class="ml-2 badge badge-danger">必須</span>
      </div>
      <%= f.collection_select(:team_attribute_id, TeamAttribute.all, :id, :name, {}, class: "col-sm-4 custom-select") %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <%= f.label "チームレベル", class: "col-sm-3" %><br />
      <%= f.collection_select(:team_level_id, TeamLevel.all, :id, :name, {}, class: "col-sm-4 custom-select") %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <%= f.label "チーム平均年齢", class: "col-sm-3" %><br />
      <%= f.collection_select(:team_player_age_id, TeamPlayerAge.all, :id, :name, {}, class: "col-sm-4 custom-select") %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <%= f.label "メンバー野球歴", class: "col-sm-3" %><br />
      <%= f.collection_select(:team_player_history_id, TeamPlayerHistory.all, :id, :name, {}, class: "col-sm-4 custom-select") %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <%= f.label "所属リーグ・団体・連盟等", class: "col-sm-3" %><br />
      <%= f.text_area :league, class: "form-control col-sm-6 overflow-auto", rows: 4 %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <%= f.label "獲得タイトル", class: "col-sm-3" %><br />
      <%= f.text_area :team_title, class: "form-control col-sm-6 overflow-auto", rows: 4 %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <%= f.label "チーム結成", class: "col-sm-3" %><br />
      <%= f.collection_select(:since_id, Since.all, :id, :name, {}, class: "col-sm-4 custom-select") %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label "活動曜日" %>
        <span class="ml-2 badge badge-secondary">複数選択可</span>
      </div>
      <% [ "土", "日", "月", "火", "水", "木", "金"].each do |day| %>
        <label class="form-check">
          <%= f.check_box :activity_day, {multiple: true}, day, nil %>
          <%= day %>
        </label>
      <% end %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <%= f.label "活動ペース", class: "col-sm-3" %><br />
      <%= f.collection_select(:activity_pace_id, ActivityPace.all, :id, :name, {}, class: "col-sm-4 custom-select") %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <%= f.label "年間試合数", class: "col-sm-3" %><br />
      <%= f.collection_select(:games_per_year_id, GamesPerYear.all, :id, :name, {}, class: "col-sm-4 custom-select") %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <%= f.label "チームスローガン", class: "col-sm-3" %><br />
      <%= f.text_field :team_slogan, class: "form-control col-sm-6 overflow-auto" %>
    </div>
    <hr width="80%" align="left">
    <div class="form-group row">
      <%= f.label "チーム紹介", class: "col-sm-3" %><br />
      <%= f.text_area :introduction, class: "form-control col-sm-6 overflow-auto", rows: 8 %>
    </div>
    <hr width="80%" align="left">
    <div class="custom-file row mb-3">
      <%= f.label "チーム画像", class: "col-sm-3" %>
      <%= f.file_field :image, id: "customFile" %>
    </div>
    <hr width="80%" align="left">
    <div class="actions my-3 d-flex justify-content-center">
      <%= f.submit "登録する", class: "col-8 btn btn-primary" %>
    </div>
  <% end %>

</div>

<%= render 'shared/footer' %>