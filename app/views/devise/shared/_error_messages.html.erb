<% if resource.errors.any? %>
  <div id="error_explanation" class="alert alert-info" role="alert">
    <h5 class="alert-heading">
       登録完了できませんでした。以下をご確認ください。
    </h5>
    <hr>
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
